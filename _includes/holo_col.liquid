{% assign i = 0 %}
{% for niji in site.data.nijisan %}
	{% if niji.region == {{include.region}} %}
		{% assign remainder = i | modulo: 5 %}

		{% if remainder == 0 %}
			<div class="row">
		{% endif %}

		<div class="col center">
			<img src="{{ niji.image_path }}" class='rounded-circle' alt='Nijisanji'>
			<a href="https://www.youtube.com/channel/{{ niji.youtube_url }}"><h5 class='extra-margin'>{{ niji.name }}</h5></a>
		</div>

		{% if remainder == 4 %}
			</div>
		{% endif %}

		{% assign i = i | plus: 1 %}
	{% endif %}
{% endfor %}

{% if remainder != 4 %}
	</div>
{% endif %}